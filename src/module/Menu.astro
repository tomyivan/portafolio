---
import { Icon } from 'astro-icon/components'
const name = "Tomy Bautista";
const position = "Desarrollador Full Stack";
---
<style>
    .bg-dark-cyan {
        background: rgb(0 255 255 / 24%);
    }
    .shadow-dark-cyan {
        box-shadow: 0px 0px 20px 0px rgb(0 255 255 / 59%), 0 0px 20px -1px rgb(0 255 255 / 59%);
    }
</style>
<section class=" flex flex-col justify-between bg-dark-cyan shadow-dark-cyan w-1/3 min-h-[80vh] py-8 opacity-75  p-4 rounded-lg border-2 border-cyan-600">
    <div class="text-cyan-600 text-2xl font-bold mb-4 text-center">
        <p class="font-bold">{ name }</p>
        <p class="text-lg font-semibold">{ position }</p> 
    </div>
    <div role="menu" class="p-2 rounded-2xl border-2 border-cyan-600 shadow-dark-cyan ">
        <ul class="flex flex-col text-gray-200 font-semibold text-center">
            <li class="cursor-pointer hover:bg-cyan-700 p-2 rounded-lg">INICIO</li>        
            <li class="cursor-pointer hover:bg-cyan-700 p-2 rounded-lg">HABILIDADES</li>
            <li class="cursor-pointer hover:bg-cyan-700 p-2 rounded-lg">PROYECTOS</li>
            <li class="cursor-pointer hover:bg-cyan-700 p-2 rounded-lg">FORMACION</li>
        </ul>
    </div>
    <div role="option" class="text-center text-gray-200 font-bold text-xl ">
        <div class="mb-4">
            Contactame            
        </div>
        <ul class="flex flex-row justify-center gap-3 items-center">
            <li class="cursor-pointer hover:text-cyan-400">
                <Icon name="linkedin" class="md:w-7 md:h-7 " />
            </li>
            <li class="cursor-pointer hover:text-cyan-400">
                <Icon name="github" class="md:w-7 md:h-7 " />
            </li>
            <li class="cursor-pointer hover:text-cyan-400">
                <Icon name="email" class="md:w-7 md:h-7 " />
            </li>
        </ul>
    </div>
       
</section>