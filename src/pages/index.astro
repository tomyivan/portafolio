	---
	import Welcome from '../components/Welcome.astro';
	// import Presentation from '../components/Presentation.astro';
	import Home from '../components/Home.astro';
	import Layout from '../layouts/Layout.astro';
	import Navigation from '../module/Navigation.astro';
	import EfecctedStar from '../components/EfecctedStar.astro';
	import Projects from '../components/Projects.astro';
	import Experience from '../components/Experience.astro';
	import Preload from '../components/Preload.astro';
	const name = "Tomy Bautista";
	// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
	// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
	---
<style >
	.slide {
		transition: opacity 0.8s ease, transform 0.8s cubic-bezier(0.77,0,0.175,1);
		opacity: 0;
		pointer-events: none;
		z-index: 0;
		transform: translateX(-100%);
	}

	.slide:target {
		opacity: 1;
		pointer-events: auto;
		z-index: 1;
		transform: translateX(0);
	}
	.scrollbar-color {
		scrollbar-color: #4B5563 transparent; /* Firefox: thumb color + track color */
		scrollbar-width: thin;
	}

	/* Chrome, Edge, Safari (WebKit) */
	.scrollbar-color::-webkit-scrollbar {
		width: 10px;
		height: 10px;
	}
	.scrollbar-color::-webkit-scrollbar-track {
		background: transparent;
	}
	.scrollbar-color::-webkit-scrollbar-thumb {
		background-color: #4B5563;
		border-radius: 999px;
		border: 2px solid transparent; /* creates spacing */
		background-clip: padding-box;
	}
	.scrollbar-color::-webkit-scrollbar-thumb:hover {
		background-color: #6B7280;
	}
</style>
<Layout >
		<Preload client:load />
		<EfecctedStar client:load />
		<h1 class="text-center text-6xl font-bold py-4 text-gray-200">{name}</h1>
		<section class="flex justify-center items-center overflow-hidden">
			<div class="min-w-2/3">
				<div class="h-[calc(100vh-10rem)]  flex justify-center relative">
					<div class="py-4 slide absolute h-full w-full text-wrap" id="Inicio" >					
						<Home />
					</div>
					<div class="py-4 slide absolute h-full w-full" id="Proyectos">					
						<Projects client:load/>
					</div>				
					<div class="py-4 slide absolute h-full w-full overflow-auto scrollbar-color" id="Historial">					
						<Experience />
					</div>
				</div>
			</div>
		</section>
		
		<Navigation />
		<!-- <Welcome /> -->
	</Layout>
