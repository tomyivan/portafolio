---
import { Icon } from 'astro-icon/components'
const title = "Mis Habilidades";
const skils = [
    { name: 'php', label: 'PHP', category: 'Backend' },
    { name: 'laravel', label: 'Laravel', category: 'Backend' },
    { name: 'node', label: 'Node.js', category: 'Backend' },
    { name: 'react', label: 'React', category: 'Frontend' },
    { name: 'python', label: 'Python', category: 'Backend' },
    { name: 'ts', label: 'TypeScript', category: 'Frontend' },
    { name: 'tailwind', label: 'Tailwind CSS', category: 'Frontend' },
    { name: 'mysql', label: 'MySQL', category: 'Database' },
    { name: 'sqlserver', label: 'SQL Server', category: 'Database' },
    { name: 'postgresql', label: 'PostgreSQL', category: 'Database' },
]
---
<style>

    @keyframes fadeInContainer {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    .skill-card {
        position: relative;
        overflow: hidden;
        border: 1px solid rgba(0, 255, 255, 0.3);
        transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
        backdrop-filter: blur(8px);
        animation: slideInSkill 0.6s ease forwards;
        opacity: 0;
    }

    .skill-card:nth-child(1) { animation-delay: 0.05s; }
    .skill-card:nth-child(2) { animation-delay: 0.1s; }
    .skill-card:nth-child(3) { animation-delay: 0.15s; }
    .skill-card:nth-child(4) { animation-delay: 0.2s; }
    .skill-card:nth-child(5) { animation-delay: 0.25s; }
    .skill-card:nth-child(6) { animation-delay: 0.3s; }
    .skill-card:nth-child(7) { animation-delay: 0.35s; }
    .skill-card:nth-child(8) { animation-delay: 0.4s; }
    .skill-card:nth-child(9) { animation-delay: 0.45s; }
    .skill-card:nth-child(10) { animation-delay: 0.5s; }

    @keyframes slideInSkill {
        from {
            opacity: 0;
            transform: translateY(30px) scale(0.85);
        }
        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }

    .skill-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(0, 255, 255, 0.3), transparent);
        transition: left 0.7s ease;
        z-index: 1;
    }

    .skill-card:hover::before {
        left: 100%;
    }

    .skill-card:hover {
        transform: translateY(-12px) scale(1.1);
        box-shadow: 0 25px 50px rgba(0, 255, 255, 0.3),
                    0 0 30px rgba(0, 255, 255, 0.2),
                    inset 0 0 20px rgba(0, 255, 255, 0.1);
        border-color: rgba(0, 255, 255, 0.8);
        background: linear-gradient(135deg, rgb(0 100 150 / 0.95), rgb(0 150 200 / 0.8));
    }

    .skill-card:active {
        transform: translateY(-6px) scale(0.98);
    }

    .skill-icon {
        position: relative;
        z-index: 2;
        transition: all 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .skill-card:hover .skill-icon {
        color: #00ffff;
        transform: rotate(15deg) scale(1.2);
        filter: drop-shadow(0 0 12px rgba(0, 255, 255, 0.7));
    }

    .skill-content {
        position: relative;
        z-index: 2;
        text-align: center;
    }

    .skill-label {
        display: block;
        font-size: 1.125rem;
        font-weight: 600;
        transition: all 0.3s ease;
        color: #00e5ff;
    }

    .skill-category {
        display: block;
        font-size: 0.75rem;
        opacity: 0;
        transform: translateY(-5px);
        transition: all 0.3s ease;
        color: #0ff;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-top: 0.5rem;
    }

    .skill-card:hover .skill-category {
        opacity: 1;
        transform: translateY(0);
    }

    .skill-card:hover .skill-label {
        text-shadow: 0 0 12px rgba(0, 255, 255, 0.6);
        letter-spacing: 0.5px;
    }

    @media (max-width: 1280px) {
    
        .skill-card {
            width: 160px;
            height: 200px;
        }
    }

    @media (max-width: 768px) {
        .skill-card {
            width: 140px;
            height: 180px;
        }
        .skill-icon {
            width: 3rem;
            height: 3rem;
        }
        .skill-label {
            font-size: 0.95rem;
        }
    }

    @media (max-width: 480px) {
        .skill-card {
            width: 120px;
            height: 160px;
        }
        .skill-icon {
            width: 2.5rem;
            height: 2.5rem;
        }
        .skill-label {
            font-size: 0.85rem;
        }
    }
</style>

<section class=" flex flex-wrap justify-center items-center gap-2  transition-all duration-300" id="habilidades">
    {
    <h2 class="w-full text-3xl font-bold  text-cyan-300">{title}</h2>
    }
    {skils.map((skill) => (
        <div class="skill-card flex flex-col items-center justify-center rounded-2xl p-6 bg-dark-cyan w-44 h-52 cursor-pointer">
            <div class="skill-icon mb-2">
                <Icon name={skill.name} class="w-20 h-20" />
            </div>
            <div >
                <span class="skill-label">{skill.label}</span>
                <span class="skill-category">{skill.category}</span>
            </div>
        </div>
    ))}
</section>